@model Visa.TAIKHOAN
<!DOCTYPE html>
<html>
<head>
    <title>ok</title>
    <script>

    </script>
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="background-image"></div>
    <div class="content">
        <div class="container">

            <div class="container" style="margin-top: 2%"></div>
            <div class="jumbotron">

                <div class="row ">
                    <div class="col-md-12">
                        <p class="text-center" style="font-size: 3em; -ms-text-shadow: 1px 1px 2px rgba(138, 43, 226, 0.12); -ms-text-shadow: 1px 1px 2px rgba(138, 43, 226, 0.12); -ms-text-shadow: 1px 1px 2px rgba(138, 43, 226, 0.12); text-shadow: 1px 1px 2px rgba(138, 43, 226, 0.12);"> Đăng Nhập</p>
                    </div>
                    <div class="col-md-12 col-sm-6" style="margin-top: -30px">
                        <div class="col-md-12 ">
                            <div class="form-group label-floating">
                                <label for="tenLogin"  class="control-label">Email, Phone or name</label>
                                <input type="text" name="name" class="form-control" id="tenLogin">

                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="form-group label-floating">
                                <label for="matKhau" class="control-label">Password</label>
                                <input type="password" name="pass" class="form-control" id="matKhau" required="required">
                            </div>
                        </div>
                    </div>
                    @*<br/>*@
                    <div class="col-md-12 col-sm-6">
                        <div class="form-group ">
                            <div class="row " style="height: 40px">
                                <div class="col-xs-6">
                                    <div class="radio" >
                                        <label >
                                            <input type="radio" name="item1" id="auto"  value="auto">
                                            Auto
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" id="remrember"  name="item1" value="remember">
                                            Remember
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-center" style="margin-top: -20px">
                        <p class="badge" id="thongbao"></p>
                    </div>
                    <div class="col-md-12">
                        <h3>@ViewBag.thongbao</h3>
                        <label>Cảm ơn các quí khách đã tin tưởng sản phẩm của chúng tôi, <span style="color: royalblue">Hỗ trợ </span> <a href="tel:+84984136977"> &nbsp;&nbsp;<span class="glyphicon glyphicon-phone-alt"></span></a></label>

                    </div>
                    <div class="col-md-12">
                        <div class="col-xs-12 text-center">
                            <div class="row">
                                <div class="col-xs-6">
                                    <button type="submit" value="Submit" class="btn btn-raised btn-info">Login</button>
                                </div>
                                <div class="col-xs-6">
                                    @Html.ActionLink("New", "Register", null, new {@class = "btn btn-raised btn-danger"})
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


</body>
</html>
<script>

    $('input:radio[name="name"]').change(
        function () {
            if ($(this).is(':checked') && $(this).val() == 'auto') {
                $.get("Login", function (data, status) {
                    alert("Data: " + data + "\nStatus: " + status);
                });
            }
        });

</script>
