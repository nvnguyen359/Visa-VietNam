<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>
    @{
        var listMain = ViewBag.view_airport as List<AIRPORTFASTRACK>;
        var head = ViewBag.view_airportHeading as List<NhomAirportFast>;
        if (listMain != null && head != null)
        {
            var numberPerson = listMain.Select(j => j.soGhe).Distinct();
            var headertable = new List<string> { head.Find(j => j.id.Equals(1)).header };
            headertable.AddRange(numberPerson.Select(e => e.ToString()));
            var row = new List<string> { head.Find(j => j.id.Equals(2)).header };
            row.AddRange(listMain.Select(w => w.sanBay));
            var row1 = new List<string> { head.Find(j => j.id.Equals(3)).header };
            row1.AddRange(listMain.Select(w => w.donGia1.ToString()+" "+w.donVi));
            var row2 = new List<string> { head.Find(j => j.id.Equals(4)).header };
            row2.AddRange(listMain.Select(w => w.donGia2.ToString() + " " + w.donVi));
            <div class="panel-body">
                <h3 class="violetblue-text">AIRPORT FAST TRACK </h3>
                <div class="table-responsive">
                    <table class="table-hover table table-bordered ">
                        <thead style="background: #3e50b4;color: whitesmoke">
                            <tr>

                                @for (int i = 0; i < headertable.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <th colspan="1" class="text-center">@headertable[i]</th>}
                                    else
                                    {
                                        <th colspan="3" class="text-center">@headertable[i]</th>}
                                }

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var w in row)
                                {
                                    if (w.Split(' ')[0] == "")
                                    {
                                        <td>N/A</td>}
                                    else
                                    {
                                        <td>@w</td>
                                    }
                                }

                            </tr>
                            <tr>
                                @foreach (var w in row1)
                                {
                                    if (w.Split(' ')[0] == "")
                                    {
                                        <td>N/A</td>}
                                    else
                                    {
                                        <td>@w</td>
                                    }

                                }

                            </tr>
                            <tr>
                                @foreach (var w in row2)
                                {
                                    if (w.Split(' ')[0] == "")
                                    {
                                        <td>N/A</td>}
                                    else
                                    {
                                        <td>@w</td>
                                    }
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }




</body>
</html>
